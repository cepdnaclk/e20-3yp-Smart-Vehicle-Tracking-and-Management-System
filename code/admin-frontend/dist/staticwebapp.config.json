{
  "navigationFallback": {
    "rewrite": "/index.html",
    "statusCode": 200
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedMethods": ["GET", "POST", "PUT", "DELETE"],
      "matchCondition": {
        "methods": ["GET", "POST", "PUT", "DELETE"]
      },
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
      }
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
} 